extends layout
block content
 
    div.row.justify-content-center
        div.col-md-8
            div.card-body.border   
                header.card-header
                    h4.card-title Registered users
                table.table
                    thead.thead-dark
                        tr 
                            th Firstname
                            th Lastname
                            th Emailaddress
                            th Gender
                            th City
                            th Country
                        tbody
                            //- iteration method 
                            each user in users
                                tr
                                    td #{user.firstname}
                                    td #{user.lastname}
                                    td #{user.emailaddress}
                                    td #{user.gender}
                                    td #{user.city}
                                    td #{user.country}
