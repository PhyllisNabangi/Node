doctype html
html(lang="en")
    head
        title Registration Form
        link(rel='stylesheet', href='./bootsrap/css/bootsrap.css')
        link(rel='stylesheet', href='./bootsrap/css/bootsrap.css')
    body
    
     .main.container
        .row
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Registration Form

            // register form
            form(method='POST' action='/register')
            div.form-group
                label(for='name') First Name:
                input#name.form-control(type='text', placeholder='first name' name='firstName')
            div.form-group
                label(for='name') Last Name:
                input#name.form-control(type='text', placeholder='last name' name='lastName')
            
            div.form-group
                label(for='email') Email:
                input#email.form-control(type='email', placeholder='name@email.com' name='email')
            div.form-group
                label(for='pw') Password:
                input#pw.form-control(type='password' name='password')
            div.form-group
                label(for='pw2') Confirm Password:
                input#pw2.form-control(type='password' name='confirmPassword')
            button.btn.btn-primary(type='submit') Sign up